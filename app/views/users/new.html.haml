
%main.devise__container
  %header.devise__header
    %h1
      = link_to new_user_path do
        = image_tag 'logo.svg', height:'49px'
  %main.devise__main
    %section.l__devise__container
      %h2.l__devise__head 新規会員登録
      .l__devise__inner
        .l__devise__content
          .l__devise__link__black
            = link_to new_user_registration_path, class: 'l__devise__link btn-default btn-mail ' do
              メールアドレスで登録
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fab.fa-facebook-square>
            Facebookで登録
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i>= embedded_svg("Google.svg", class: "good-svg")
            Googleで登録
= render "/devise/shared/footer"
