%body
  %main.devise__container
    %header.devise__header
      %h1
        =link_to card_users_path do
          %img.img__devise__header{alt:"mercari", src:"//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3160895340"}/
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li
            会員情報
            .after
          %li
            電話番号認証
            .after.after_2.progress-status
          %li
            お届け先住所入力
            .after.after_2.progress-status
          %li.active
            支払い方法
            .after_2.progress-status
          %li
            完了
            .before
    %main.devise__main
      %section.l__devise__container
        %h2.l__devise__head 支払い方法
        = form_with model: @user do |f|
          .l__devise__content
            .field
              = f.label :email,"カード番号", class:"form-group-label"
              %span.form-require 必須
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "nickname" ,placeholder:"半角数字のみ",class: "input-default"
            %ul.signup-card-list
              %li
                %img{alt:"", height:"20",src:"//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3856598694", width: "49"}/
              %li
                %img{alt:"", height:"20", src:"//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3856598694", width:"34"}/
              %li
                %img{alt:"", height:"20", src:"//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3856598694", width:"30"}/
              %li
                %img{alt:"", height:"20", src:"//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3856598694", width:"32"}/
              %li
                %img{alt: "", height:"20", src:"//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3856598694", width:"21"}/
              %li
                %img{alt:"", height: "20", src:"//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3856598694", width:"32"}/
              %li
                %img{alt:"", height:"20", src:"//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3856598694", width:"32"}/
            .field
              = f.label :email,"有効期限", class:"form-group-label"
              %span.form-require 必須
              %br/
              .birthday-select-wrap
                .select-wrap.select-wrap__month
                  = f.select :exp_month,[["--",""],["1","01"],["2","02"],["3","03"],["4","04"],["5","05"],["6","06"],["7","07"],["8","08"],["9","09"],["10","10"],["11","11"],["12","12"]],{}, {class:"select-default" ,id:"payment-card-exp-month", name:"exp_month"}
                  %i.icon-arrow-bottom
                %span 月
                .select-wrap.select-wrap__day
                  = f.select :exp_year ,[["--",""],["19","2019"],["20","2020"],["21","2021"],["22","2022"],["23","2023"],["24","2024"],["25","2025"],["26","2026"],["27","2027"],["28","2028"],["29","2029"]],{},{class:"select-default", id:"payment-card-exp-year", name:"exp-year"}
                  %i.icon-arrow-bottom
                %span 年
            .field
              = f.label :email,"セキュリティーコード", class:"form-group-label"
              %span.form-require 必須
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "nickname" ,placeholder:"カード背面４桁もしくは３桁",class: "input-default"
              .text-right
                %p
                  %i.fas.fa-question-circle>
                  カード裏面の番号とは？
              .l__devise__link__white
                = f.submit "次に進む",class: 'btn-default btn-red'
= render "/devise/shared/footer"
