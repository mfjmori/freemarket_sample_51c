%body
  %main.devise__container
    %header.devise__header
      %h1
        =link_to new_user_addresses_path do
          = image_tag 'logo.svg', height:'49px'
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li
            会員情報
            .after
          %li
            電話番号認証
            .after.after_2.progress-status
          %li.active
            お届け先住所入力
            .after_2.progress-status
          %li
            支払い方法
            .progress-status
          %li
            完了
            .before
    %main.devise__main
      %section.l__devise__container
        %h2.l__devise__head お届け先住所入力
        = form_for(@addresses, url:{controller: "addresses", action: "create"}) do |f|
          .l__devise__content
            .field
              = f.label :post_code,"郵便番号", class:"form-group-label"
              %span.form-require 必須
              %br/
              = f.text_field :post_code, autofocus: true, autocomplete: ":post_code" ,placeholder:"123-4567",class: "input-default"
            .field
              = f.label :prefecture,"都道府県", class:"form-group-label"
              %span.form-require 必須
              %br/
              = f.select :prefecture, User.prefectures_i18n.keys.map {|k| [User.prefectures_i18n[k], k]},{},class:'prefecture'
            .field
              = f.label :municipality,"市区町村", class:"form-group-label"
              %span.form-require 必須
              %br/
              = f.text_field :municipality, autofocus: true, autocomplete: ":municipality" ,placeholder:"例）横浜市緑区",class: "input-default"
            .field
              = f.label :house_number,"番地", class:"form-group-label"
              %span.form-require 必須
              %br/
              = f.text_field :house_number, autofocus: true, autocomplete: "house_number" ,placeholder:"例）青山1−1−1",class: "input-default"
            .field
              = f.label :building_name,"建物名", class:"form-group-label"
              %span.un-form-require 任意
              %br/
              = f.text_field :building_name, autofocus: true, autocomplete: "building_name" ,placeholder:"例）柳ビル103",class: "input-default"
            .field
              = f.label :phone_number,"電話番号", class:"form-group-label"
              %span.un-form-require 任意
              %br/
              = f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" ,placeholder:"例）09012345678",class: "input-default"
            .l__devise__link__white
              = f.submit "次に進む",class: 'btn-default btn-red'
    = render '/devise/shared/footer'
