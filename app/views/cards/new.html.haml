.breadcrumbs.solideee
  .breadcrumbs__style
    - breadcrumb :card_input
    = breadcrumbs separator: " #{content_tag(:i, '', class:'fas fa-chevron-right')} "
%main
  .container
    .content
      %h2 クレジットカード情報入力
      = form_tag("/users/#{current_user.id}/cards/pay", class: "form", method: :post, id: 'charge-form', name: "inputForm") do
        .content__input
          .content__input__info
            .content__input__info-num
              %label
                カード番号
                %span.required
                  必須
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul
                %li
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3856598694"
                %li
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3856598694"
                %li
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3856598694"
                %li
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3856598694"
                %li
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3856598694"
                %li
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3856598694"
                %li
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3856598694"
            .content__input__info-limit
              %label
                有効期限
                %span.required
                  必須
              .limit-moth
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %i#down.fas.fa-chevron-down
                %span 月
              .limit-year
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %i#down.fas.fa-chevron-down
                %span 年
            .content__input__info-security
              %label
                セキュリティーコード
                %span.required
                  必須
              = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              .sec_info
                %p カード裏面の番号とは？
            .content__input__info-btn#card_token
              = button_tag "追加する", id: "token_submit", class: "submit-button"

    .side
      = render "layouts/side"
