.breadcrumbs.solideee
  .breadcrumbs__style
    - breadcrumb :card
    = breadcrumbs separator: " #{content_tag(:i, '', class:'fas fa-chevron-right')} "
%main
  .container
    .content
      %h2 支払い方法
      %form.form
        .content__card
          %section.content__card-a
            .content__card-a-index
              %h3 クレジットカード一覧
            -# - if カードがあるとき
            .content__card-a-show
              %ul
                %li
                  %figure
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3856598694"
                  .show-num
                    = "**** **** **** " + @default_card_information.last4
                  .show-day
                    - exp_month = @default_card_information.exp_month.to_s
                    - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
                  .show-button
                    =form_tag(cards_delete_path, method: :post, id: 'charge-form', name: "inputForm") do
                      %input{type: "hidden", name: "card_id", value: ""}
                      %button
                        削除する
          %section.content__card-b
            -# - if カードがないとき
            .content__card-b-btn
              %button 
                %i.far.fa-credit-card クレジットカードを追加する
          .content__card-link
            
            = link_to do
              支払い方法について
              %i.fas.fa-chevron-right
    .side
      = render "layouts/side"
